<br />
<a
  class="btn-floating btn-medium waves-effect waves-light green darken-1"
  href="/parts/add"
><i class="material-icons">add</i></a>
<ul class="collection">
  {{#if cats}}

    <div class="row">
      {{#each cats}}
        <div class="col-6">
          <div class="card">
            <div class="card-header text-center">
              <h5>{{this.name}}</h5>
            </div>
            <div class="card-body">
              <h5 class="card-title"><img src="/upload/{{this.img}}" class="rounded mx-auto d-block" /></h5>
              <p class="card-text">{{this.description}}</p>
              <div class="card-action text-center">
                <a
                  class="waves-effect waves-light btn green darken-1"
                  href="/parts/edit/{{this.id}}"
                ><i class="material-icons left">edit</i>تعديل</a>

                <form
                  action="/parts/delete/{{this.id}}"
                  method="POST"
                  style="display:inline;"
                >
                  <button
                    type="submit"
                    data-bs-toggle="tooltip"
                    data-bs-title="Delete user"
                    data-bs-placement="top"
                    class="btn btn-danger green darken-1"
                  >
                    <i class="material-icons left">delete</i>حذف
                  </button>
                </form>
              </div>
            </div>
          </div>
        </div>
      {{/each}}
    </div>

  {{else}}
    <li class="collection-header"><h4>No Cats</h4></li>
  {{/if}}

</ul>